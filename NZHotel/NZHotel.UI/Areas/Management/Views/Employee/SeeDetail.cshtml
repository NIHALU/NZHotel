@model List<EmployeeFileListDto>

<h3 class="bg-dark my-3 text-white text-center">Employee File List</h3>
<a class="btn btn-danger" asp-controller="EmployeeFile" asp-action="Create">Create New Employee File</a>
<div class="container-fluid mt-2">
	@{
		if (Model?.Count >= 0)
		{
			<table id="myTable" class="mt-3 table table-sm table-hover table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>E-FullName</th>
						<th>E-IdentityNo</th>
						<th>W-WorkingType</th>
						<th>Daily Working Hour</th>
						<th>Hourly Wage</th>
						<th>Montly Working Day</th>
						<th>Monthly Wage</th>
						<th>Off-Day</th>
						<th>Overtime Number</th>
						<th>Overtime Wage</th>
						<th>Salary</th>
						<th>Salary With OverTime</th>
						<th>Process</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var employeeFile in Model)
					{
						<tr>
							<td>@employeeFile.Id</td>
							<td> @(employeeFile.Employee.Name+" "+ employeeFile.Employee.Surname)</td>
							<td> @employeeFile.Employee.IdentityNumber</td>
							<td> @employeeFile.WorkingType.Definition</td>
							<td> @employeeFile.DailyWorkingHour</td>
							<td> @employeeFile.HourlyWage</td>
							<td> @employeeFile.MonthlyWorkingDay</td>
							<td> @("₺"+employeeFile.MonthlyWage)</td>
							<td> @employeeFile.OffDay</td>
							<td> @employeeFile.OvertimeNumber</td>
							<td> @employeeFile.OvertimeWage</td>
							<td> @(employeeFile.Salary.ToString("C2"))</td>
							<td> @(employeeFile.SalaryWithOverTime.ToString("C2"))</td>
							<td>
								<div class="dropdown">
									<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										Process
									</a>

									<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
										<li>  <a asp-action="Update" asp-controller="EmployeeFile" asp-route-employeeFileId="@employeeFile.Id"> Update </a> </li>
										<li>    <a asp-action="Remove" asp-controller="Employee" asp-route-employeeFileId="@employeeFile.Id"> Remove  </a> </li>
									</ul>
								</div>
							</td>
						</tr>
					}
				</tbody>

			</table>
		}
		else
		{
			<div class="text-center my-3 p-1">
				There is No Employee File Data For Now.
			</div>
		}
	}
</div>

