@model List<DepartmentListDto>

	<h3 class="bg-dark my-3 text-white text-center">Department List</h3>

	<a class="btn-outline-danger text-end"asp-action="Create" asp-controller="Department"> Create New Department </a> </>
<div class="container-fluid">
	@{
		if (Model?.Count >= 0)
		{
			<table id="myTable" class="mt-3 table table-sm table-hover table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Process</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var department in Model)
					{
						<tr>
							<td>@department.Id</td>
							<td> @department.Title</td>

							<td>
								<div class="dropdown">
									<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										Process
									</a>

									<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
										<li> <a asp-action="Update" asp-controller="Department" asp-route-departmentId="@department.Id"> Update </a></li>
										<li>  <a asp-action="Remove" asp-controller="Department" asp-route-departmentId="@department.Id"> Remove  </a></li>

									</ul>
								</div>



							</td>


						</tr>
					}
				</tbody>

			</table>
		}
		else
		{
			<div class="text-center my-3 p-1">
				There is No Department Data For Now.
			</div>
		}
	}
</div>








