@model RoomDetailCreateModel
<div class="dummy mt-5"></div>
<div class="mt-4">
	<form asp-action="Create" asp-controller="RoomDetail" method="post" class="p-5 w-75 mx-auto">	

        
       <div class="mb-3">
			<select class="form-select" asp-items="@Model.RoomNumbers" asp-for="@Model.RoomId">
				<option value="0" >Which Room Will Be Detailed?</option>
			</select>
		</div>

		<div class="mb-3">
			<label>Floor Info :</label>
			<input type="number" class="form-control" asp-for="@Model.FloorInfo" />
		</div>



<div class="form-check">
  <input class="form-check-input" type="checkbox" asp-for="@Model.HasWifi" id="defaultCheck1">
