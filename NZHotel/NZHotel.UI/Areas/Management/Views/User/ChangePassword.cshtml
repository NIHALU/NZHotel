@model ChangePasswordModel

<div class="dummy mt-5"></div>

<h3 class="bg-dark my-3 text-white text-center">Change Password</h3>
<div class="row">
	<div class="col-md-12">
		<form asp-action="ChangePassword" asp-controller="User" method="post" class="p-3 mx-auto w-75 shadow">
		
		<div class="form-group">
			<label>Current Password:</label>
			<input asp-for="@Model.CurrentPassword" class="form-control" />
				<span class="text-danger" asp-validation-for="@Model.CurrentPassword"></span>
		</div>
			<div class="form-group">
			<label>New Password:</label>
			<input  asp-for="@Model.NewPassword" class="form-control" />
				<span class="text-danger" asp-validation-for="@Model.NewPassword"></span>
		</div>

			<div class="form-group">
				<label>Confirm Password:</label>
				<input asp-for="@Model.ConfirmPassword" class="form-control" />
				<span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
			</div>

		

		<div class="my-3">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>
	

		<div class="text-danger mt-2" asp-validation-summary="ModelOnly">
		</div>
	</form>
	</div>
</div>
