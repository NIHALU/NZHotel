@using NZHotel.DataAccess.Entities
@model List<AppUser>

	<a asp-action="Create" asp-controller="User" class="my-2 d-inline-block">Add A New User</a>
<table class="table table-hover table-bordered table-sm">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Role Info</th>
			<th>Process</th>
         </tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
	   {
		   <tr>
			<td>@item.UserName</td>
			<td>@item.Email</td>
			<td> <getUserInfo user-id="@item.Id"></getUserInfo></td>
			<td><a asp-action="AssignRole" asp-route-id="@item.Id">Assign Role</a></td>
		</tr>
	   }
		
	</tbody>
</table>