@using NZHotel.DataAccess.Entities
@model List<AppRole>
<div class="dummy mt-5"></div>

<h3 class="bg-dark my-3 text-white text-center">Role List</h3>
<div class="container-fluid">
	<a asp-action="Create" asp-controller="Role" class="my-2 d-inline-block">Add A New Role</a>
	@{
		if (Model?.Count >= 0)
		{
<table class="table table-hover table-bordered table-sm">
	<thead>
	
		<tr>
			<th>Role Name</th>
			<th>Process</th>

         </tr>
	 
	</thead>
	<tbody>
		@foreach (var item in Model)
	   {
		   <tr>
			<td>@item.Name</td>
			<td> <a asp-action="Update" asp-controller="Role" asp-route-roleId="@item.Id"> Update </a> </td>
		</tr>
	   }
		
	</tbody>
</table>
		}
		else
		{
			<div class="text-center my-3 p-1">
				There is No Role Data For Now.
			</div>
		}
	}

	</div>