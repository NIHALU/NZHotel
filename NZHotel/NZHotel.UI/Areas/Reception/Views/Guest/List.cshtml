@model List<GuestListDto>

<h3 class="bg-dark my-3 text-white text-center">Guest List</h3>
<div class="container-fluid">
	@{
		if (Model?.Count >= 0)
		{
			<table id="myTable" class="mt-3 table table-sm table-hover table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Surname</th>
						<th>Age</th>
						<th>Phone </th>
						<th>Adress </th>
						<th>Identity Number</th>
						<th>Nationality</th>
						<th>Country</th>
						<th>IsForeign</th>
						<th>Gender</th>
						<th>Guest Type</th>
						<th>Visited Before</th>
						<th>Process</th>
					


					</tr>
				</thead>

				<tbody>
					@foreach (var guest in Model)
					{
						<tr>
							<td>@guest.Id</td>
							<td> @guest.Name</td>
							<td> @guest.Surname</td>
							<td> @guest.Age</td>
							<td> @guest.PhoneNumber</td>
							<td> @guest.Address</td>
							@if  (guest.IsNoTurkishCitizen  ==  false)
							{
								<td> @guest.IdentityNumber </td>
							}
							else
							{
								<td> @guest.PassportNumber </td>
							}
							<td> @guest.Nationality</td>
							<td> @guest.CountryName</td>
							<td> @guest.IsNoTurkishCitizen</td>
							<td> @guest.Gender.Definition</td>
							<td> @guest.GuestType.Definition</td>
							<td> @guest.VisitedBefore</td>


							<td>
								<div class="dropdown">
									<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										Process
									</a>

									<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
										<li><a asp-action="CheckIn" asp-controller="Guest" asp-route-guestId="@guest.Id"> Check-In  </a></li>
										<li><a asp-action="Update" asp-controller="Guest" asp-route-guestId="@guest.Id"> Update </a></li>

									</ul>
			                     </div>


							</td>


						</tr>
					}
				</tbody>

			</table>
		}
		else
		{
			<div class="text-center my-3 p-1">
				There is No Guest Data For Now.
			</div>
		}
	}
</div>








