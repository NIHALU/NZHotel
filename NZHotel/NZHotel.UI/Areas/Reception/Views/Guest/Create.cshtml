@model GuestCreateModel
<div class="dummy mt-5"></div>
<div class="mt-4">
	<form asp-action="Create" asp-controller="Guest" method="post" class="p-5 w-75 mx-auto" >
		<div class="mb-3">
			<label>Guest Name:</label>
			<input type="text" class="form-control" asp-for="@Model.Name" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Guest Surname:</label>
			<input type="text" class="form-control" asp-for="@Model.Surname" />
			<span asp-validation-for="@Model.Surname" class="text-danger"></span>
		</div>
			<div class="form-check">
			<input class="form-check-input" type="checkbox" asp-for="@Model.IsNoTurkishCitizen" id="defaultCheck1">
			<label class="form-check-label" for="IsNoTurkishCitizen">
				Is Foreign Citizen?
			</label>
			<span asp-validation-for="@Model.IsNoTurkishCitizen" class="text-danger"></span>
		</div>

		<div class="mb-3" id="TCDiv">
			<label>TC No:</label>
			<input type="number" class="form-control" asp-for="@Model.IdentityNumber" />
			<span asp-validation-for="@Model.IdentityNumber" class="text-danger"></span>
		</div>
		<div class="mb-3" style="display:none" id="PassportDiv">
			<label>Passport No:</label>
			<input type="number" class="form-control" asp-for="@Model.PassportNumber" />
			<span asp-validation-for="@Model.PassportNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Country:</label>
			<input type="text" class="form-control" asp-for="@Model.CountryName" />
			<span asp-validation-for="@Model.CountryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Nationality:</label>
			<input type="text" class="form-control" asp-for="@Model.Nationality" />
			<span asp-validation-for="@Model.Nationality" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Short Address:</label>
			<input type="text" class="form-control" asp-for="@Model.Address" />
			<span asp-validation-for="@Model.Address" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Phone Number:</label>
			<input type="tel" class="form-control" asp-for="@Model.PhoneNumber" />
			<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
				<option value="0">Choose Guest's Gender</option>
			</select>
				<span asp-validation-for="@Model.GenderId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<select class="form-select" asp-items="@Model.GuestTypes" asp-for="@Model.GuestTypeId">
				<option value="0">Choose Guest's Gender</option>
			</select>
				<span asp-validation-for="@Model.GuestTypeId" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
				<label asp-for="@Model.BirthDay">Birth Date:</label>
				<input type="date" asp-for="@Model.BirthDay" class="form-control" placeholder="Birth Date" />
				<span asp-validation-for="@Model.BirthDay" class="text-danger"></span>
		</div>

	

		<div class="mb-3 text-end">
			<button type="submit" class="btn btn-primary"> Guest Create </button>
		</div>

		<div class="text-danger" asp-validation-summary="All">
		</div>

	</form>
</div>
