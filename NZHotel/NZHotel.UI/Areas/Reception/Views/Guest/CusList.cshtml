@model List<CustomerListDto>

<h3 class="bg-dark my-3 text-white text-center">Customer List</h3>
<div class="container-fluid">
	@{
		if (Model?.Count >= 0)
		{
			<table id="myTable" class="mt-3 table table-sm table-hover table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Surname</th>
						<th>Email</th>
						<th>Phone </th>
						<th>IsNotTurkish </th>
						<th>Identity No</th>
						<th>Country</th>
						<th>Adress</th>
						<th>Process</th>
					


					</tr>
				</thead>

				<tbody>
					@foreach (var customer in Model)
					{
						<tr>
							<td>@customer.Id</td>
							<td> @customer.ContactName</td>
							<td> @customer.ContactSurname</td>
							<td> @customer.ContactEmail</td>
							<td> @customer.ContactPhone</td>
							<td> @customer.IsNoTurkishCitizen</td>
							@if  (customer.IsNoTurkishCitizen  ==  false)
							{
								<td> @customer.TurkishIDNo </td>
							}
							else
							{
								<td> @customer.PassportNo </td>
							}
							<td> @customer.Country</td>
							<td> @customer.Adress</td>
							


							<td>
								<div class="dropdown">
									<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										Process
									</a>

									<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
										<li><a asp-action="RemoveCus" asp-controller="Guest" asp-route-guestId="@customer.Id"> Remove  </a></li>


									</ul>
			                     </div>


							</td>


						</tr>
					}
				</tbody>

			</table>
		}
		else
		{
			<div class="text-center my-3 p-1">
				There is No Customer Data For Now.
			</div>
		}
	}
</div>








