@model List<GuestInfoListDto>

	<div class="container-fluid">
	@{
	if (Model?.Count >= 0)
	{
		<table id="myTable2" class="mt-3 table table-sm table-hover table-striped">
	        <thead>
				<tr>
				   <th>Gu-Id</th>
				   <th>Re-Code</th>
				   <th>Gu-FullName</th>
				   <th>Gu-Age</th>
				   <th>GT-GuestType</th>
				</tr>
			</thead>

			<tbody>
			@foreach(var guest in Model)
				{
				<tr>
				   <td>@guest.Id</td>
				   <td> @guest.Reservation.ReservationCode </td>
				   <td> @(guest.Name +" "+guest.Surname)  </td>
				   <td> @guest.Age</td>
				   <td> @guest.GuestType.Definition</td>
				</tr>
				}
			</tbody>

		</table>
	}
	else
	{
	  <div class="text-center my-3 p-1">	 
	     There is No Guest Info Data For Now. 
	  </div>
	}
}
</div>

}

