@model List<RoomDetailListDto>

	<div class="container-fluid">
	@{
	if (Model?.Count > 0)
	{
		<table class="mt-3 table table-sm table-hover table-striped">
	        <thead>
				<tr>
				   <th>Room No</th>
				   <th>Floor</th>
				   <th>Wifi</th>
				   <th>Minibar</th>
				   <th>Balcoy</th>
				   <th>Sea View</th>
				   <th>AC</th>
				   <th>TV </th>
				   <th>Hair Dryer</th>
				   <th>Living Room</th>
				   <th>Washing Machine</th>
				   <th>Safe Deposit </th>
				   <th>Jakuzi</th>
				</tr>
			</thead>

			<tbody>
			@foreach(var roomdetail in Model)
				{
				<tr>
				   <td>@roomdetail.Room.RoomNo</td>
				   <td>@roomdetail.FloorInfo</td>
				   <td> @(roomdetail.HasWifi?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasMinibar?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasBalcony?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasSeaView?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasAC?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasTV?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasHairDryer?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasLivingRoom?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasWashingMashine?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasSafeDepositBox?"Yes":"Not Exist")</td>
				   <td> @(roomdetail.HasJakuzi?"Yes":"Not Exist")</td>
				   <td>
				       <a asp-action="Update" asp-controller="AdminRoomDetail" asp-route-roomDetailId="@roomdetail.Id"> Update </a>
				       <a asp-action="Remove" asp-controller="AdminRoomDetail" asp-route-roomDetailId="@roomdetail.Id" > Remove  </a>
				    

				   </td>


				</tr>
				}
			</tbody>

		</table>
	}
	else
	{
	  <div class="text-center my-3 p-1">	 
	     There is No Room Data For Now. 
	  </div>
	}
}
</div>
