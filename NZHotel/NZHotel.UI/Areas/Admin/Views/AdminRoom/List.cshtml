@model List<RoomListDto>

	<div class="container-fluid">
	@{
	if (Model?.Count > 0)
	{
		<table class="mt-3 table table-sm table-hover table-striped">
	        <thead>
				<tr>
				   <th>Name</th>
				   <th>No</th>
				   <th>Price</th>
				   <th>Max ADT</th>
				   <th>Max CHD</th>
				   <th>Type </th>
				   <th>Bed Info</th>
				   <th>Status</th>
				   <th>Info</th>
				</tr>
			</thead>

			<tbody>
			@foreach(var room in Model)
				{
				<tr>
				   <td> @room.RoomName</td>
				   <td> @room.RoomNo</td>
				   <td> @room.RoomPrice</td>
				   <td> @room.MaxAdults</td>
				   <td> @room.MaxChildren</td>
				   <td> @room.RoomTypeId</td>
				   <td> @room.BedInfo</td>
				   <td> @room.RoomStatusId</td>
				   <td> @room.Info</td>
				</tr>
				}
			</tbody>

		</table>
	}
	else
	{
	  <div class="text-center my-3 p-1">	 
	     There is No Room Data For Now. 
	  </div>
	}
}
</div>
