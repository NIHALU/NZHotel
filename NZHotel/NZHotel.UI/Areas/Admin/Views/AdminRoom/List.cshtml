@model List<RoomListDto>

	<div class="container-fluid">
	@{
	if (Model?.Count > 0)
	{
		<table id="myTable" class="mt-3 table table-sm table-hover table-striped">
	        <thead>
				<tr>
				   <th>Id</th>
				   <th>Name</th>
				   <th>No</th>
				   <th>Price</th>
				   <th>Max ADT</th>
				   <th>Max CHD</th>
				   <th>Max INF</th>
				   <th>Type </th>
				   <th>Bed Info</th>
				   <th>Status</th>
				   <th>Info</th>
				   <th>Process</th>
				</tr>
			</thead>

			<tbody>
			@foreach(var room in Model)
				{
				<tr>
				   <td>@room.Id</td>
				   <td> @room.RoomName</td>
				   <td> @room.RoomNo</td>
				   <td> @room.RoomPrice.ToString("C2")</td>
				   <td> @room.MaxAdults</td>
				   <td> @room.MaxChildren</td>
				   <td> @room.MaxInfants</td>
				   <td> @room.RoomType.Definition</td>
				   <td> @room.BedInfo</td>
				   <td> @room.RoomStatus.Definition</td>
				   <td> @room.Info</td>
				   <td>
				       <a asp-action="Update" asp-controller="AdminRoom" asp-route-roomId="@room.Id"> Update </a>
				       <a asp-action="Remove" asp-controller="AdminRoom" asp-route-roomId="@room.Id" > Remove  </a>
				       <a asp-action="RoomDetail" asp-controller="AdminRoomDetail" asp-route-roomId="@room.Id" > See Details </a>

				   </td>


				</tr>
				}
			</tbody>

		</table>
	}
	else
	{
	  <div class="text-center my-3 p-1">	 
	     There is No Room Data For Now. 
	  </div>
	}
}
</div>


@section script{
<script src="~/theme/admin/js/datatable_file.js"></script>
	}